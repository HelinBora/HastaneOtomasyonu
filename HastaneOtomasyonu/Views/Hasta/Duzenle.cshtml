@model HastaneOtomasyonu.Models.Hasta

@{
    ViewBag.Title = "Hasta Düzenle";
}

<h2>Hasta Bilgilerini Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Ad)
        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Soyad)
        @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TCNo)
        @Html.TextBoxFor(m => m.TCNo, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DogumTarihi)
        @Html.TextBoxFor(m => m.DogumTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cinsiyet)
        @Html.DropDownListFor(m => m.Cinsiyet, new SelectList(new[] { "Kadın", "Erkek" }), "Seçiniz", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
}
