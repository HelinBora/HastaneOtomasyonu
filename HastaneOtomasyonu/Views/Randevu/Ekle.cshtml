@model HastaneOtomasyonu.Models.Randevu

@{
    ViewBag.Title = "Yeni Randevu Ekle";
}

<h2>Yeni Randevu Ekle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Hasta")
        @Html.DropDownListFor(m => m.HastaId, (SelectList)ViewBag.HastaId, "Seçiniz", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Doktor")
        @Html.DropDownListFor(m => m.DoktorId, (SelectList)ViewBag.DoktorId, "Seçiniz", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Tarih)
        @Html.TextBoxFor(m => m.Tarih, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Saat)
        @Html.TextBoxFor(m => m.Saat, "{0:hh\\:mm}", new { @class = "form-control", type = "time" })
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
}
